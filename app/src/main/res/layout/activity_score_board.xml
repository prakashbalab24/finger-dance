<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_score_board"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color1"
    tools:context="com.finger.dance.activities.ScoreBoard">
    <com.finger.dance.component.ui.RadialGradientView
        android:id="@+id/background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:centerX=".5"
        app:centerY=".5"
        app:startColor="@color/background_blue_start"
        app:endColor="@color/background_blue_end"
        app:gradientRadiusWidthPercent="1"
        />


    <com.finger.dance.component.ui.CustomTextView
        android:text=""
        android:textSize="32sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/winnerTv" />
    <LinearLayout
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="bottom|center"
       android:layout_centerInParent="true"
        android:layout_below="@+id/winnerTv"
        android:layout_centerHorizontal="true">

    <com.finger.dance.component.ui.CustomTextView
        android:text="Play Again"
        android:background="@drawable/cust_but"
        android:layout_width="match_parent"
        android:layout_margin="14dp"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:id="@+id/playagainBut"
        android:textSize="18sp"
        android:textStyle="bold"
        android:padding="12dp"/>

        <com.finger.dance.component.ui.CustomTextView
            android:text="Calibrate Pointers"
            android:background="@drawable/cust_but"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:textStyle="bold"
            android:textSize="12sp"
            android:id="@+id/calibrateBut"
            android:padding="12dp"/>
    </LinearLayout>

    <com.finger.dance.component.ui.CustomTextView
        android:text="@string/wrong_des"
        android:textSize="16sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/winnerTv"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="121dp"
        android:id="@+id/textView5" />
</RelativeLayout>
