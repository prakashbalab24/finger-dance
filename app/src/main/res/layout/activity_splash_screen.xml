<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_splash_screen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color8"
    tools:context="com.finger.dance.activities.SplashScreen">
    <com.finger.dance.component.ui.RadialGradientView
        android:id="@+id/background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:centerX=".5"
        app:centerY=".5"
        app:startColor="@color/background_purple_start"
        app:endColor="@color/background_purple_end"
        app:gradientRadiusWidthPercent="1"
        />


    <com.finger.dance.component.ui.CustomTextView
        android:textColor="@android:color/background_dark"
        android:text="@string/multiplayer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:gravity="center"
        android:id="@+id/head"

        android:layout_below="@+id/textView2"
        android:layout_centerHorizontal="true" />

    <com.finger.dance.component.ui.CustomTextView
        android:text="@string/app_name"
        android:textAllCaps="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="36sp"
        android:gravity="center"
        android:transitionName="@string/app_name"
        android:textColor="@color/black"
        android:id="@+id/textView2"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="61dp" />
</RelativeLayout>
